<div class="content-wrapper">
  <div class="vimeo-content">
    <figure class="with-caption">
      <div class="video-wrapper">
        <iframe src="//player.vimeo.com/video/<%= content.media_id %>
        " width="700" height="350" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
      </div>
      <div class="caption">
      <span class="media-title"><%= link_to content.title, content_path(content.id) %>
      <% if current_user.id == content.user_id %>
        <span class="delete">
          <%= link_to "delete", delete_content_path(content.id) %>
        </span>
      </span>
      <% end %>
      <p>By: <%= link_to content.user.username, user_path(content.user_id) %></p>

      <div class="tags">
        <div class="tag-c">
        <% if content.collab %>
          <%= "#collaborate" %>
        <% end %>
        </div>

        <div class="tag-f">
        <% if content.feedback %>
          <%= "#feedback" %>
        <% end %>
        </div>

        <div class="tag-l">
        <% if content.latest %>
          <%= "#latest" %>
        <% end %>
        </div>
      </div>
      </div>
    </figure>
  </div>
</div>